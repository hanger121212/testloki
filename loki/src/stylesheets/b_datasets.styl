@import "./config.styl"
.el-dropdown-menu.datasetlist_control
    margin 0
    padding: 0
    width: 80px
    text-align: center
    margin-top: -1px
    border: 1px solid #80ceff
    box-shadow: 0px 0px 10px 0px rgba(127, 206, 255, 0.5);
    border-radius: 0
    transition: none
    .el-dropdown-menu__item
        position: relative
        font-size: 12px
    .el-dropdown-menu__item:hover
        background-color: #ccebff
        color: #1a95e5
.el-dropdown-menu.datasetlist_control.el-popper[x-placement^=bottom]
    .coverbox
        position: absolute
        width: 38px
        height: 9px
        right: 0
        top: -9px
        background-color: #fff
.el-dropdown-menu.datasetlist_control.el-popper[x-placement^=top]
    .coverbox2
        position: absolute
        width: 38px
        height: 9px
        right: 0
        bottom: -9px
        background-color: #fff
#page_datasets
    padding 35px 110px;
    .el-input__inner
        font-size: 12px
    .topbar
        padding-bottom: 40px
        .graybtn
            float: right
            background-color: #b3b3b3
            line-height: 30px
            padding: 0
            width: 120px
            color #fff
            border: 0
        .search
            float left
            line-height: 30px;
            font-size: 14px;
            width: 200px;
            input
                height: 30px;
                padding-right: 40px
            .iconbox
                height: 29px
                width: 30px
                background-color: #b3b3b3
                text-align: center
                position: absolute
                top: 1px
                right: 0
                z-index: 2999
            .icon
                margin 0
                margin-top: 4px;
    .condition
        padding-bottom: 40px;
        border-bottom: 1px solid #d9d9d9
        .el-input__inner
            height: 32px;
            width: 200px
        .userlist
            margin-left: -1px
        .sort
            float: right
    .dslist
        .el-table
            background-color: transparent
            .el-table__header-wrapper
                display: none
            .el-table__row
                height: 80px
            tr td
                border-top: 1px solid #d9d9d9
                border-bottom: 1px solid #d9d9d9
            tr td:first-child
                border-left: 1px solid #d9d9d9
                padding-left: 40px;
                padding-right: 80px;
            tr td:last-child
                border-right: 1px solid #d9d9d9
            .el-table__body
                border-collapse: separate;
                border-spacing: 0 20px;
            .cell
                height: 40px
                .title
                    display: inline-block
                    width: calc(100% - 60px);
                    overflow: hidden;
                    text-overflow: ellipsis;
                    .namebox
                        margin-top: 6px
                        text-overflow: ellipsis;
                        overflow: hidden;
                        .name
                            white-space: nowrap
                            display: inline
                span
                    display: block
                    vertical-align: top
            .type
                font-size: 12px
                line-height: 12px
                color: #999
            .name
                font-size: 14px
                line-height: 20px
                color #333
                margin-top: 5px
            .logo
                display: inline-block
                vertical-align: top
                margin-right: 10px 
            .editbox
                line-height: 20px;
                display: inline-block;
                padding 9px
                border: 1px solid transparent
                cursor: pointer
                .icon
                    color #017cca
                    vertical-align: top
                    margin 0
            .editbox:hover
                border: 1px solid #017cca
                background-color: #fff
            .control.show
                .editbox
                    border: 1px solid #80ceff
                    background-color: #fff
                    box-shadow: 0px 0px 10px 0px rgba(127, 206, 255, 0.5);
        .el-table--enable-row-hover .el-table__body tr:hover>td
            background-color: #fafcfe