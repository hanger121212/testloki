@import "./config.styl"
body
    margin 0
    font-family: "微软雅黑"
#page_signup_info
    .header
        width 100%
        height 100px
        padding 33px
        border-bottom: 1px solid #ecf0f3

        .el-row
            max-width 1200px
            margin auto
            a
                display: inline-block;
                height: 32px;
                vertical-align: top;
            img
                height: 32px
            span
                display: inline-block;
                line-height: 33px;
                font-size: 20px;
                color #333
                margin-left: 40px
    .main
        .el-input
            input
                height 44px
                border-radius 2px
                border-color #d4deea
                padding-left 30px;
                color #67747d
            .el-input.is-active .el-input__inner, .el-input__inner:focus
                border-color bicolor
        .el-select
            width: 100%
        .el-form-item.is-error .el-input__inner
            border-color  #f56c6c
        >.el-row
            max-width: 1100px;
            margin auto
            padding-top 50px
            padding-bottom: 30px;
            .info
                float left;
                .title
                    display: inline-block;
                    padding: 0 20px;
                    border-bottom 4px solid bicolor
                    line-height: 40px
                    color bicolor
                    font-size: 20px
                    font-weight: bold
                p
                    padding-left: 20px
                    color: #333
                    margin-bottom: 50px
                    width: 550px;
                    white-space: nowrap;
            .itemlist
                margin-left: 60px
                max-width: 400px;
            .el-form-item
                max-width: 400px;
                margin-bottom: 30px;
        .buttonbox
            padding 20px 50px
        .login
                width 100%
                height 50px
                background-color bicolor
                font-size 18px
                color #fff
                border 0
                border-radius 0
        .login.is-disabled,.register.is-disabled,.getregmsg.is-disabled
            background-color #ccc
        .description
            float: right
            width: 390px
            img
                width: 390px
                padding-bottom: 5px
            span
                display: block
                text-align: center
                color bicolor
                font-size 20px
                line-height: 30px
        @media(max-width: 1000px)
            .description
                display: none

    .footer
        position: fixed
        bottom: 0
        text-align center
        width 100%
        background-color #bedffe
        
        p
            margin 0
            line-height 30px
            font-size 12px
            color #333